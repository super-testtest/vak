<?xml version="1.0"?>
<config>
    <sections>
        <wunderadmin_config translate="label" module="wunderadmin">
            <label>Wunder Admin Configuration</label>
            <tab>nwdall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>2000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
				<about translate="label">
					<label>NWDthemes.com</label>
					<frontend_type>text</frontend_type>
					<expanded>1</expanded>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<info translate="label">
							<frontend_model>nwdall/adminhtml_system_config_nwdthemes</frontend_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</info>
					</fields>
				</about>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<expanded>1</expanded>
					<fields>
                        <enabled translate="label">
                            <label>Enable Wunder Admin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
					</fields>
                </general>
            </groups>
		</wunderadmin_config>
    </sections>
</config>
