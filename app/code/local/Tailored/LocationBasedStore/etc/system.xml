<?xml version="1.0"?>
<config>
	<tabs>
		<locationbasedstore translate="label" module="locationbasedstore">
			<label>Location Based Store</label>
			<sort_order>0</sort_order>
		</locationbasedstore>
	</tabs>

	<sections>
		<location_configuration  translate="label" module="locationbasedstore">                    
			<label>Configuration</label>
			<tab>locationbasedstore</tab>
			<frontend_type>text</frontend_type>
			<sort_order>0</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>            
			<groups>
				<location_general translate="label"> 
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enable translate="label">
							<label>Enable</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable>
						<default_store translate="label">
							<label>Default Store View</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_store</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Redirect to store view if user location will not match with available country</comment>
						</default_store>
					</fields>
				</location_general>
				
				<location_nb translate="label"> 
					<label>Norway</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<country translate="label">
							<label>Country</label>
							<frontend_type>multiselect</frontend_type>
							<source_model>adminhtml/system_config_source_country</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Select country which you want to redirect to norway store</comment>
						</country>
					</fields>
				</location_nb>

				<location_SE translate="label"> 
				<label>Swedish</label>
				<frontend_type>text</frontend_type>
				<sort_order>1</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
				<fields>
					<country translate="label">
						<label>Country</label>
						<frontend_type>multiselect</frontend_type>
						<source_model>adminhtml/system_config_source_country</source_model>
						<sort_order>0</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>Select country which you want to redirect to swedish store</comment>
					</country>
				</fields>
				</location_SE>

				<location_en translate="label"> 
				<label>English</label>
				<frontend_type>text</frontend_type>
				<sort_order>1</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
				<fields>
					<country translate="label">
						<label>Country</label>
						<frontend_type>multiselect</frontend_type>
						<source_model>adminhtml/system_config_source_country</source_model>
						<sort_order>0</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>Select country which you want to redirect to English store</comment>
					</country>
				</fields>
				</location_en>

				<location_DE translate="label"> 
				<label>German</label>
				<frontend_type>text</frontend_type>
				<sort_order>1</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
				<fields>
					<country translate="label">
						<label>Country</label>
						<frontend_type>multiselect</frontend_type>
						<source_model>adminhtml/system_config_source_country</source_model>
						<sort_order>0</sort_order>
						<show_in_default>1</show_in_default>
						<show_in_website>1</show_in_website>
						<show_in_store>1</show_in_store>
						<comment>Select country which you want to redirect to german store</comment>
					</country>
				</fields>
				</location_DE>

			</groups>
		</location_configuration>
	</sections>
</config>
